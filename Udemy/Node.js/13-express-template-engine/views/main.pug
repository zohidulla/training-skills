extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/styles/main.css")

block content
  main
    h1 Users list
    if users.length > 0
      each user in users 
        div.card
          img(src="https://www.w3schools.com/howto/img_avatar.png", alt="Avatar", style="width:100%")
          div.container
            h4
              b #{user.username}
            p Age: #{user.age}
    else
      p There is no users